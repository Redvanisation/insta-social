<div class="row section ">

    <div class="col-md-8">
        <h2 class="text-center">Your feed</h2>
        <% if !current_user.friends.any? %>
            <p class="article-showcase text-center">You have no friends yet, add friends to see their content...</p>
        <% end %>
        <% @posts.each do |post| %>            
            <% if current_user.friends.include?(post.user) %>
                <p class="article-showcase"><%= post.content %></p>
                <p><%= link_to "Read more", post_path(post) %></p>
                <p class="authors">by: <%= link_to "#{post.user.username.capitalize}", user_path(post.user) %></p>
            <% end %>

    <% end %>
        
    </div>
    <div class="col-md-1"></div>

    <% if current_user.posts.any? %>
        <div class="col-md-3 mobile-mt">
            <h4><%= current_user.username.capitalize %>'s posts</h4>
            <% @posts.each do |post| %>
                <% if post.user == current_user %>
                    <p class="article-showcase text-smaller"><%= post.content %></p>
                    <p><%= link_to "Read more", post_path(post) %></p>
                    <hr>
                <% end %>
            <% end %>
        </div>
    <% end %>


</div>